    "num = int(input(\"Enter the number: \"))  \n",
    "list = []\n",
    "\n",
    "def reverse(num):#將數字翻轉輸出\n",
    "    if (num > 0):  \n",
    "        Reminder = num % 10\n",
    "        list.append(str(Reminder)) #將 num中最後一個數加入list中 \n",
    "        reverse(num // 10) #recursive function\n",
    "\n",
    "reverse(num)\n",
    "final_num = \"\".join(list)\n",
    "print(final_num)"
   ]
  }
